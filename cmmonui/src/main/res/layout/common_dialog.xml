<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_ffffff_6_shadow"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_17_important"
        android:layout_width="@dimen/distance_265"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_25"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="标题标题标题标题标题" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/tv_17_important"
        android:layout_width="@dimen/distance_265"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_8"
        tools:text="内容内容内容内容内容" />

    <FrameLayout
        android:layout_width="@dimen/distance_265"
        android:layout_height="@dimen/distance_45"
        android:layout_marginTop="@dimen/distance_20"
        android:layout_marginBottom="@dimen/distance_25">

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/tv_15_important"
            android:layout_width="@dimen/distance_125"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_ffaaaaaa_1"
            android:gravity="center"
            android:text="@string/app_cancel" />

        <TextView
            android:id="@+id/btn_ok"
            style="@style/tv_15_ffffff"
            android:layout_width="@dimen/distance_125"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/shape_bg_fff95555_6"
            android:gravity="center"
            android:text="@string/app_sure" />
    </FrameLayout>

</LinearLayout>
